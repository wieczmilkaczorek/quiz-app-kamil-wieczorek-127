@model QuizApp.Models.Quiz

@{
    ViewData["Title"] = "Usuń Quiz - Panel Administratora";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-secondary">Powrót do Listy</a>
</div>

<div class="alert alert-warning">
    <h4 class="alert-heading">Uwaga!</h4>
    <p>Czy na pewno chcesz usunąć ten quiz? Ta akcja jest nieodwracalna.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">@Model.Id</dd>
            
            <dt class="col-sm-3">Tytuł:</dt>
            <dd class="col-sm-9">@Model.Title</dd>
            
            <dt class="col-sm-3">Opis:</dt>
            <dd class="col-sm-9">@Model.Description</dd>
            
            <dt class="col-sm-3">Autor:</dt>
            <dd class="col-sm-9">@(Model.Author?.UserName ?? "Nieznany")</dd>
            
            <dt class="col-sm-3">Liczba pytań:</dt>
            <dd class="col-sm-9">@Model.Questions.Count</dd>
            
            <dt class="col-sm-3">Data utworzenia:</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
        </dl>
        
        <form asp-action="DeleteQuiz" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger" onclick="return confirm('Czy na pewno chcesz usunąć ten quiz?')">
                Tak, usuń quiz
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </div>
</div>