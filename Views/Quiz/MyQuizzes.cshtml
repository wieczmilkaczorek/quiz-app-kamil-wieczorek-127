@model IEnumerable<QuizApp.Models.Quiz>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

@{
    ViewData["Title"] = "Moje Quizy";
}

<h1>@ViewData["Title"]</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Stwórz nowy quiz</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Opis</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quiz in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => quiz.Title)</td>
                <td>@Html.DisplayFor(modelItem => quiz.Description)</td>
                <td>
                    <a asp-controller="Statistics" asp-action="Details" asp-route-id="@quiz.Id" class="btn btn-sm btn-info" title="Statystyki"><i class="bi bi-bar-chart-line"></i></a>
                    <a asp-action="Delete" asp-route-id="@quiz.Id" class="btn btn-sm btn-danger" title="Usuń"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
