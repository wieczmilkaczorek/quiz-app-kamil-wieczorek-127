@model QuizApp.ViewModels.QuestionViewModel
@using QuizApp.ViewModels

<div class="question-block border p-3 mb-3">
    <div class="form-group mb-2">
        <label class="fw-bold">Treść pytania</label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Punkty</label>
        <input asp-for="Points" type="number" class="form-control" />
        <span asp-validation-for="Points" class="text-danger"></span>
    </div>
    
    <h6 class="mt-3">Odpowiedzi</h6>
    <div class="answers-container">
        @for (var j = 0; j < Model.Answers.Count; j++)
        {
            <div class="input-group mb-2 answer-group">
                <div class="input-group-text">
                    <input type="radio" asp-for="CorrectAnswerIndex" value="@j" class="form-check-input" />
                </div>
                <input asp-for="Answers[j].Text" class="form-control" placeholder="Treść odpowiedzi" />
                <button type="button" class="btn btn-sm btn-danger remove-answer">&times;</button>
            </div>
        }
    </div>
    <span asp-validation-for="CorrectAnswerIndex" class="text-danger d-block mt-1"></span>
    
    <button type="button" class="btn btn-sm btn-info add-answer mt-1">Dodaj odpowiedź</button>
    <button type="button" class="btn btn-sm btn-danger remove-question mt-1 float-end">Usuń Pytanie</button>
</div>
